<!--  Datasource config for MySQL using 2.0.11 driver                     -->
<!-- ==================================================================== -->

<datasources>
	<local-tx-datasource>
		<jndi-name>CLMDS</jndi-name>
		<connection-url>--database_url--</connection-url>
		<driver-class>org.gjt.mm.mysql.Driver</driver-class>
		<user-name>--database_user_name--</user-name>
		<password>--database_user_password--</password>
		<exception-sorter-class-name>
			org.jboss.resource.adapter.jdbc.vendor.MySQLExceptionSorter
		</exception-sorter-class-name>
	</local-tx-datasource>
	<local-tx-datasource>
		<jndi-name>CLMCSMDS</jndi-name>
		<connection-url>--database_url--</connection-url>
		<driver-class>org.gjt.mm.mysql.Driver</driver-class>
		<user-name>--database_user_name--</user-name>
		<password>--database_user_password--</password>
		<exception-sorter-class-name>
			org.jboss.resource.adapter.jdbc.vendor.MySQLExceptionSorter
		</exception-sorter-class-name>
	</local-tx-datasource>
</datasources>
