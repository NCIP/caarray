        </java>
    </target>

    <!-- ******************************************************************* -->
    <!-- ** DOWNLOAD FILE CONTENTS                                        ** -->
    <!-- ******************************************************************* -->
    <target name="download_file" depends="build">
        <java classname="caarray.client.examples.DownloadFile">
            <classpath>
