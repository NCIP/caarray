<!-- *********************************************************************** -->
<!-- ** PROJECT:   caArray Grid API Client Examples                       ** -->
<!-- *********************************************************************** -->

<project name="caarrayGridClientExamples_v1_0" default="build" basedir=".">
    <!-- ******************************************************************* -->
    <!-- ** SERVER CONNECTION PROPERTIES                                  ** -->
    <!-- ******************************************************************* -->
    <property name="grid.server.hostname" value="array-dev.nci.nih.gov" />
    <property name="grid.server.http.port" value="80" />

    <!-- ******************************************************************* -->
    <!-- ** PROPERTIES NEEDED FOR BUILD                                   ** -->
    <!-- ******************************************************************* -->
    <property name="src.dir" value="${basedir}/src" />
    <property name="lib.dir" value="${basedir}/lib" />
    <property name="classes.dir" value="${basedir}/classes" />

    <!-- ******************************************************************* -->
    <!-- ** BUILD TARGETS                                                 ** -->
    <!-- ******************************************************************* -->
    <target name="clean">
        <delete dir="${classes.dir}" />
    </target>

    <target name="build">
        <mkdir dir="${classes.dir}" />
        <javac srcdir="${src.dir}" destdir="${classes.dir}" debug="true">
            <classpath>
                <fileset dir="${lib.dir}">
                    <include name="**/*.jar" />
                </fileset>
            </classpath>
        </javac>
    </target>

    <!-- ******************************************************************* -->
    <!-- ** SEARCH FOR EXPERIMENTS                                        ** -->
    <!-- ******************************************************************* -->
    <target name="search_experiments_by_criteria" depends="build">
        <java classname="caarray.client.examples.grid.SearchExperimentsByCriteria">
            <classpath>
                <pathelement path="${classes.dir}" />
                <fileset dir="${lib.dir}">
                    <include name="**/*.jar" />
                </fileset>
            </classpath>
            <sysproperty key="grid.server.hostname" value="${grid.server.hostname}" />
            <sysproperty key="grid.server.http.port" value="${grid.server.http.port}" />
        </java>
    </target>

    <target name="search_experiments_by_keyword" depends="build">
        <java classname="caarray.client.examples.grid.SearchExperimentsByKeyword">
            <classpath>
                <pathelement path="${classes.dir}" />
                <fileset dir="${lib.dir}">
                    <include name="**/*.jar" />
                </fileset>
            </classpath>
            <sysproperty key="grid.server.hostname" value="${grid.server.hostname}" />
            <sysproperty key="grid.server.http.port" value="${grid.server.http.port}" />
        </java>
    </target>

    <!-- ******************************************************************* -->
    <!-- ** SEARCH FOR BIOMATERIALS                                       ** -->
