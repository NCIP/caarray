<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.mageom.domain.Measurement.impl">
  <class name="UnitImpl" table="UNIT" polymorphism="implicit">
    <id name="id" column="ID" type="long">
      <generator class="assigned"/>
    </id>
    <discriminator>
      <column name="OJBCONCRETECLASS"/>
    </discriminator>
    <property name="unitName" column="UNITNAME" type="string" />
    <set name="propertySets" lazy="true">
      <key column="ID" />
      <one-to-many class="gov.nih.nci.mageom.domain.impl.NameValueTypeImpl" />
    </set>
    <subclass name="TemperatureUnitImpl" discriminator-value="org.biomage.Measurement.TemperatureUnit">
      <property name="unitNameCV" column="UNITNAMECV" type="string" />
    </subclass>
    <subclass name="MassUnitImpl" discriminator-value="org.biomage.Measurement.MassUnit">
      <property name="unitNameCV" column="UNITNAMECV" type="string" />
    </subclass>
    <subclass name="VolumeUnitImpl" discriminator-value="org.biomage.Measurement.VolumeUnit">
      <property name="unitNameCV" column="UNITNAMECV" type="string" />
    </subclass>
    <subclass name="DistanceUnitImpl" discriminator-value="org.biomage.Measurement.DistanceUnit">
      <property name="unitNameCV" column="UNITNAMECV" type="string" />
    </subclass>
    <subclass name="TimeUnitImpl" discriminator-value="org.biomage.Measurement.TimeUnit">
      <property name="unitNameCV" column="UNITNAMECV" type="string" />
    </subclass>
    <subclass name="QuantityUnitImpl" discriminator-value="org.biomage.Measurement.QuantityUnit">
      <property name="unitNameCV" column="UNITNAMECV" type="string" />
    </subclass>
    <subclass name="ConcentrationUnitImpl" discriminator-value="org.biomage.Measurement.ConcentrationUnit">
      <property name="unitNameCV" column="UNITNAMECV" type="string" />
    </subclass>
  </class>
</hibernate-mapping>

