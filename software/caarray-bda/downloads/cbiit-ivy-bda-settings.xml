<!--
$Id: ivy-bda-settings.xml 1729 2009-05-28 17:59:23Z saksass $
$HeadURL: https://ncisvn.nci.nih.gov/svn/automation/trunk/software/bda-build-template/software/common/bda-download/ivy-bda-settings.xml $

This file is the is the settings file used by IVY.  It is a good starting point for most projects to use IVY.  It has two resolvers, the ncicb-ivy-repo resolver points to the NCICB Ivy Repository.  The other resolver is to a local filesystem repository where temporary artifacts can be published as part of a project or where you can test out your ivy definitions before they are added to official NCICB Ivy Repository.  There are notes below for sepcial configuraitons.
-->


<ivysettings>
	<property name="ivy-bda.local.repo" value="${software.dir}/caarray-bda/ivy-repo"/>
	<property name="tmp.local.repo" value="${software.dir}/tmp.local.ivy.repo"/>
    <settings defaultResolver="ncicb-chain"/>
    <caches defaultCacheDir="${ivy.settings.dir}/.ivy2-caarray-cache" useOrigin="false"/>
    <resolvers >
    	<chain name="ncicb-chain">
	    	<filesystem name="ivy-bda.repo1" local="true">
				<artifact pattern="${ivy-bda.local.repo}/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
				<ivy pattern="${ivy-bda.local.repo}/[organisation]/[module]/[revision]/ivy.xml"/>
			</filesystem>
	       	<filesystem name="ivy-bda.repo2" local="true">
	        	<ivy pattern="${ivy-bda.local.repo}/[organisation]/[module]/ivy-[revision].xml" />
				<artifact pattern="${ivy-bda.local.repo}/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
	       	</filesystem>
	       	<filesystem name="tmp.local.repo1" local="true">
				<artifact pattern="${tmp.local.repo}/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
				<ivy pattern="${tmp.local.repo}/[organisation]/[module]/[revision]/ivy.xml"/>
			</filesystem>
	       	<filesystem name="tmp.local.repo2" local="true">
	        	<ivy pattern="${tmp.local.repo}/[organisation]/[module]/ivy-[revision].xml" />
				<artifact pattern="${tmp.local.repo}/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
	       	</filesystem>
	       	<ibiblio name="nexus-repo-public" m2compatible="true" root="https://ncimvn.nci.nih.gov/nexus/content/repositories/public" 
           			pattern="[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
    	</chain>
    </resolvers>
</ivysettings>