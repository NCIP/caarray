
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/ajax/*</pattern>
        <pattern>/protected/ajax/*</pattern>
        <pattern>/struts/dojo/*</pattern>
        <pattern>/resources/*</pattern>
    </excludes>
    <decorator name="default" page="/WEB-INF/pages/decorators/default.jsp">
        <excludes>
            <pattern>/login.action</pattern>
        </excludes>
        <pattern>/*</pattern>

    </decorator>
    <decorator name="login" page="/WEB-INF/pages/decorators/login.jsp">
        <pattern>/login.action</pattern>
    </decorator>
</decorators>


