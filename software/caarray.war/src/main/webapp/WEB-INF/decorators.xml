 
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/*ajax=true*</pattern>
        <pattern>/*ajax_*</pattern>
        <pattern>/struts/dojo/*</pattern>
        <pattern>/resources/*</pattern>
    </excludes> 
    <decorator name="default" page="/WEB-INF/pages/decorators/default.jsp">
        <excludes>
            <pattern>/WEB-INF/pages/login.jsp</pattern>
        </excludes>
        <pattern>/*</pattern>
    </decorator>
    <decorator name="login" page="/WEB-INF/pages/decorators/login.jsp">
        <pattern>/WEB-INF/pages/login.jsp</pattern>
    </decorator>
</decorators>


