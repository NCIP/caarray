<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="caarrayParams"
                class="gov.nih.nci.caarray.web.interceptor.DisplayTagParametersInterceptor" />

            <interceptor-stack name="caarrayParamsPrepareParamsStack">
                <interceptor-ref name="exception" />
                <interceptor-ref name="alias" />
                <interceptor-ref name="caarrayParams" />
                <interceptor-ref name="servletConfig" />
                <interceptor-ref name="prepare" />
                <interceptor-ref name="i18n" />
                <interceptor-ref name="chain" />
                <interceptor-ref name="modelDriven" />
                <interceptor-ref name="fileUpload" />
                <interceptor-ref name="checkbox" />
                <interceptor-ref name="staticParams" />
                <interceptor-ref name="caarrayParams" />
                <interceptor-ref name="conversionError" />
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
            </interceptor-stack>

            <interceptor-stack name="caarrayDefaultStack">
                <interceptor-ref name="exception" />
                <interceptor-ref name="alias" />
                <interceptor-ref name="servletConfig" />
                <interceptor-ref name="prepare" />
                <interceptor-ref name="i18n" />
                <interceptor-ref name="chain" />
                <interceptor-ref name="debugging" />
                <interceptor-ref name="profiling" />
                <interceptor-ref name="scopedModelDriven" />
                <interceptor-ref name="modelDriven" />
                <interceptor-ref name="fileUpload" />
                <interceptor-ref name="checkbox" />
                <interceptor-ref name="staticParams" />
                <interceptor-ref name="caarrayParams">
                    <param name="excludeParams">dojo\..*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError" />
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="caarrayParamsPrepareParamsStack" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping result="error" exception="java.lang.Throwable"/>
        </global-exception-mappings>

    </package>

    <package name="protected" namespace="/protected" extends="default">
        <action name="logout" class="gov.nih.nci.caarray.web.action.LogoutAction">
            <result name="success" type="redirect-action">project/list</result>
        </action>

        <action name="project/*" class="gov.nih.nci.caarray.web.action.ProjectAction" method="{1}">
            <result name="workspace" type="redirect-action">project/list</result>
            <result name="input">/WEB-INF/pages/project/form.jsp</result>
            <result name="details">/WEB-INF/pages/project/details.jsp</result>
            <result name="list">/WEB-INF/pages/project/list.jsp</result>
            <result name="permissions">/WEB-INF/pages/project/permissions.jsp</result>
        </action>

        <action name="ajax/project/loadTab/*"
            class="gov.nih.nci.caarray.web.action.ProjectAction" method="{1}LoadTab">
            <result name="input">/WEB-INF/pages/project/{1}.jsp</result>
        </action>

        <action name="ajax/project/loadGenericTab/*"
            class="gov.nih.nci.caarray.web.action.ProjectAction" method="loadTab">
            <result name="input">/WEB-INF/pages/project/{1}.jsp</result>
        </action>

        <action name="ajax/project/saveTab/*"
            class="gov.nih.nci.caarray.web.action.ProjectAction" method="{1}SaveTab">
            <result name="input" type="chain">ajax/project/loadTab/{1}</result>
            <result name="success">/WEB-INF/pages/project/{1}.jsp</result>
            <result name="workspace">/WEB-INF/pages/project/backToWorkspace.jsp</result>
            <result name="sourcesTab">/WEB-INF/pages/project/sources.jsp</result>
            <result name="samplesTab">/WEB-INF/pages/project/samples.jsp</result>
            <result name="factorsTab">/WEB-INF/pages/project/factors.jsp</result>
        </action>

        <action name="ajax/project/saveGenericTab/*"
            class="gov.nih.nci.caarray.web.action.ProjectAction" method="saveTab">
            <result name="input">/WEB-INF/pages/project/{1}.jsp</result>
            <result name="success">/WEB-INF/pages/project/{1}.jsp</result>
            <result name="workspace">/WEB-INF/pages/project/backToWorkspace.jsp</result>
        </action>

        <action name="ajax/project/remove/*"
            class="gov.nih.nci.caarray.web.action.ProjectAction" method="{1}Removal">
            <result name="success">/WEB-INF/pages/project/{1}s.jsp</result>
        </action>

        <action name="ajax/project/copy/*"
            class="gov.nih.nci.caarray.web.action.ProjectAction" method="{1}Copy">
            <result name="success">/WEB-INF/pages/project/{1}Edit.jsp</result>
        </action>

        <action name="file/manage" class="gov.nih.nci.caarray.web.action.FileManageAction" method="manage">
            <result name="success">/WEB-INF/pages/project/projectFiles.jsp</result>
        </action>
         <action name="file/messages" class="gov.nih.nci.caarray.web.action.FileManageAction" method="messages">
            <result name="input">/WEB-INF/pages/project/projectFiles.jsp</result>
            <result name="success">/WEB-INF/pages/project/validationMessages.jsp</result>
        </action>
        <action name="file/upload" class="gov.nih.nci.caarray.web.action.FileManageAction" method="upload">
            <result name="input">/WEB-INF/pages/project/projectFiles.jsp</result>
            <result name="success" type="redirect-action">file/manage?project.id=${project.id}</result>
        </action>
        <action name="file/import" class="gov.nih.nci.caarray.web.action.FileManageAction">
            <result name="input">/WEB-INF/pages/project/projectFiles.jsp</result>
            <result name="success" type="redirect-action">file/manage?project.id=${project.id}</result>
        </action>
        <action name="file/download" method="download" class="gov.nih.nci.caarray.web.action.FileManageAction">
            <result name="success" type="stream">
                <param name="contentType">application/zip</param>
                <param name="inputName">downloadStream</param>
                <param name="contentDisposition">filename="caArrayFiles.zip"</param>
                <param name="bufferSize">4096</param>
            </result>
            <interceptor-ref name="caarrayParamsPrepareParamsStack" />
        </action>
     </package>

