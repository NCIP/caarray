<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

     <!-- Constants -->
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.custom.i18n.resources" value="ApplicationResources,errors"/>
    <constant name="struts.ui.theme" value="css_xhtml"/>
    <constant name="struts.codebehind.pathPrefix" value="/WEB-INF/pages/"/>    
    
    <!-- Include Struts defaults -->
    <include file="struts-default.xml"/>

    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">

        <global-results>
            <result name="error">/error.jsp</result>
            <result name="home" type="redirect-action">listProjects</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping result="error" exception="java.lang.Throwable"/>
        </global-exception-mappings>
         
        <action name="listProjects" class="projectAction" method="list"> 
            <result name="success">/pages/projectList.jsp</result> 
        </action>
        
        <action name="createProject" class="projectAction" method="create"> 
            <result name="success">/pages/newProject.jsp</result> 
        </action>
        
        <action name="saveProject" class="projectAction" method="save">
            <result name="input">/pages/newProject.jsp</result> 
            <result name="success" type="chain">listProjects</result>
        </action>
        
        <action name="editProject" class="manageFilesAction" method="edit"> 
            <result name="success">/pages/projectDetails.jsp</result>
        </action>        
        
        <action name="manageFiles" class="manageFilesAction" method="manageFiles"> 
            <result name="success">/pages/projectFiles.jsp</result>
        </action>
        
        <action name="doUpload" class="fileUploadAction">
            <interceptor-ref name="fileUpload"/>
            <interceptor-ref name="basicStack"/>
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="chain">manageFiles</result>
        </action>
        
        <action name="doImport" class="manageFilesAction">
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="chain">manageFiles</result>
        </action>
        
        <action name="viewMessages" class="manageFilesAction" method="viewMessages">
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success">/pages/validationMessages.jsp</result>
        </action>
                
    </package>

</struts>
