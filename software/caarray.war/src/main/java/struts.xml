<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

     <!-- Constants -->
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.custom.i18n.resources" value="ApplicationResources,errors"/>
    <constant name="struts.ui.theme" value="css_xhtml"/>
    <constant name="struts.codebehind.pathPrefix" value="/WEB-INF/pages/"/>    
    
    <!-- Include Struts defaults -->
    <include file="struts-default.xml"/>

    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
    
        <interceptors>
            <interceptor-stack name="caFileUploadStack">
                <interceptor-ref name="fileUpload">
                    <param name="allowedTypes">*.data</param>
                    <param name="maximumSize">2024000000</param>
                </interceptor-ref>
                <interceptor-ref name="basicStack"/>
            </interceptor-stack>
        </interceptors> 
        
        <global-results>
            <result name="error">/error.jsp</result>
            <result name="home" type="redirect-action">Project_list</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping result="error" exception="java.lang.Throwable"/>
        </global-exception-mappings>
         
        <action name="Project_list" class="projectAction" method="list"> 
            <result name="success">/pages/projectList.jsp</result> 
        </action>
        
        <action name="Project_create" class="projectAction" method="create"> 
            <result name="success">/pages/newProject.jsp</result> 
        </action>
        
        <action name="Project_save" class="projectAction" method="save">
            <result name="input">/pages/newProject.jsp</result> 
            <result name="success" type="chain">Project_list</result>
        </action>
        
        <action name="Project_edit" class="manageFilesAction" method="edit"> 
            <result name="success">/pages/projectDetails.jsp</result>
        </action>        
        
        <action name="File_manage" class="manageFilesAction" method="manage"> 
            <result name="success">/pages/projectFiles.jsp</result>
        </action>
        
        <action name="File_upload" class="fileUploadAction" method="upload">
            <!-- disabled interceptor b/c not concerned about file type or size. 
            so just added struts.multipart.maxSize to struts.properties to get 
            around apache default size of 2M.
            <interceptor-ref name="caFileUploadStack"/> -->
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="chain">File_manage</result>
        </action>
        
        <action name="File_import" class="manageFilesAction">
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="chain">File_manage</result>
        </action>
        
        <action name="File_messages" class="manageFilesAction" method="messages">
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success">/pages/validationMessages.jsp</result>
        </action>
                
    </package>

</struts>
