<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

     <!-- Constants -->
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.custom.i18n.resources" value="ApplicationResources,errors"/>
    <constant name="struts.ui.theme" value="css_xhtml"/>
    <constant name="struts.codebehind.pathPrefix" value="/WEB-INF/pages/"/>    
    
    <!-- Include Struts defaults -->
    <include file="struts-default.xml"/>

    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <default-interceptor-ref name="paramsPrepareParamsStack" />
        
        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping result="error" exception="java.lang.Throwable"/>
        </global-exception-mappings>
        
    </package>
    
    <package name="protected" namespace="/protected" extends="struts-default">
        <default-interceptor-ref name="paramsPrepareParamsStack" />
        
        <action name="Logout" class="gov.nih.nci.caarray.web.action.LogoutAction"> 
            <result name="success" type="redirect-action">Project_list</result> 
        </action>
        <action name="Project_list" class="gov.nih.nci.caarray.web.action.ProjectAction" method="list"> 
            <interceptor-ref name="basicStack"/>
            <result name="success">/WEB-INF/pages/project/projectList.jsp</result> 
        </action>
        <action name="Project_*" class="gov.nih.nci.caarray.web.action.ProjectAction" method="{1}"> 
            <result name="input">/WEB-INF/pages/project/projectForm.jsp</result>
            <result name="success" type="redirect-action">Project_list</result> 
        </action>
        <action name="Project_details" class="gov.nih.nci.caarray.web.action.ProjectAction" method="details">
            <result name="success">/WEB-INF/pages/project/projectDetails.jsp</result>
        </action>        
        <action name="Project_toggle" class="gov.nih.nci.caarray.web.action.ProjectAction" method="toggle">
            <result name="success" type="redirect-action">Project_list</result>
        </action>
        <action name="File_manage" class="gov.nih.nci.caarray.web.action.FileManageAction" method="manage">
            <result name="success">/WEB-INF/pages/project/projectFiles.jsp</result>
        </action>
         <action name="File_messages" class="gov.nih.nci.caarray.web.action.FileManageAction" method="messages">
            <result name="input">/WEB-INF/pages/project/projectFiles.jsp</result>
            <result name="success">/WEB-INF/pages/project/validationMessages.jsp</result>
        </action>
        <action name="File_upload" class="gov.nih.nci.caarray.web.action.FileManageAction" method="upload">
            <result name="input">/WEB-INF/pages/project/projectFiles.jsp</result>
            <result name="success" type="redirect-action">File_manage?project.id=${project.id}</result>
        </action>
        <action name="File_import" class="gov.nih.nci.caarray.web.action.FileManageAction">
            <result name="input">/WEB-INF/pages/project/projectFiles.jsp</result>
            <result name="success" type="redirect-action">File_manage?project.id=${project.id}</result>
        </action>
        
     </package>   
    
</struts>
