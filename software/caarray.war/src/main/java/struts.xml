<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

     <!-- Constants -->
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.custom.i18n.resources" value="ApplicationResources,errors"/>
    <constant name="struts.ui.theme" value="css_xhtml"/>
    <constant name="struts.codebehind.pathPrefix" value="/WEB-INF/pages/"/>    
    
    <!-- Include Struts defaults -->
    <include file="struts-default.xml"/>

    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
    
        <interceptors>
            <interceptor-stack name="caArrayParamsPrepareParamsStack">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="conversionError"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
            </interceptor-stack>
          
            <interceptor-stack name="caArrayDefaultStack">
                <interceptor-ref name="exception"/>
                <interceptor-ref name="alias"/>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="chain"/>
                <interceptor-ref name="debugging"/>
                <interceptor-ref name="profiling"/>
                <interceptor-ref name="scopedModelDriven"/>
                <interceptor-ref name="modelDriven"/>
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="checkbox"/>
                <interceptor-ref name="staticParams"/>
                <interceptor-ref name="params">
                  <param name="excludeParams">dojo\..*</param>
                </interceptor-ref>
                <interceptor-ref name="conversionError"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel,browse</param>
                </interceptor-ref>
            </interceptor-stack> 
        </interceptors>   

        <default-interceptor-ref name="caArrayDefaultStack" />
        
        <global-results>
            <result name="error">/error.jsp</result>
            <result name="home" type="redirect-action">Project_list</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping result="error" exception="java.lang.Throwable"/>
        </global-exception-mappings>
        
        <action name="Logout" class="gov.nih.nci.caarray.web.action.LogoutAction"> 
            <result name="success">/index.jsp</result> 
        </action>
         
        <action name="Project_list" class="gov.nih.nci.caarray.web.action.ProjectAction" method="list"> 
            <result name="success">/pages/projectList.jsp</result> 
        </action>
        
        <action name="Project_create" class="gov.nih.nci.caarray.web.action.ProjectAction" method="create"> 
            <result name="success">/pages/newProject.jsp</result> 
        </action>
        
        <action name="Project_save" class="gov.nih.nci.caarray.web.action.ProjectAction" method="save">
            <result name="input">/pages/newProject.jsp</result> 
            <result name="success" type="chain">Project_list</result>
        </action>
        
        <action name="Project_edit" class="gov.nih.nci.caarray.web.action.ManageFilesAction" method="edit">
            <interceptor-ref name="caArrayParamsPrepareParamsStack" /> 
            <result name="success">/pages/projectDetails.jsp</result>
        </action>        
        
        <action name="Project_toggle" class="gov.nih.nci.caarray.web.action.ManageFilesAction" method="toggle">
            <result name="success" type="chain">Project_list</result>
        </action>        
        
        <action name="File_manage" class="gov.nih.nci.caarray.web.action.ManageFilesAction" method="manage">
            <interceptor-ref name="caArrayParamsPrepareParamsStack" /> 
            <result name="success">/pages/projectFiles.jsp</result>
        </action>
        
        <action name="File_upload" class="gov.nih.nci.caarray.web.action.MultipleFileUploadAction" method="upload">
            <!-- disabled interceptor b/c not concerned about file type or size. 
            so just added struts.multipart.maxSize to struts.properties to get 
            around apache default size of 2M.
            <interceptor-ref name="caFileUploadStack"/> -->
            <interceptor-ref name="caArrayParamsPrepareParamsStack" />
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="chain">File_manage</result>
        </action>
        
        <action name="File_import" class="gov.nih.nci.caarray.web.action.ManageFilesAction">
            <interceptor-ref name="caArrayParamsPrepareParamsStack" />
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="chain">File_manage</result>
        </action>
        
        <action name="File_messages" class="gov.nih.nci.caarray.web.action.ManageFilesAction" method="messages">
            <interceptor-ref name="caArrayParamsPrepareParamsStack" />
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success">/pages/validationMessages.jsp</result>
        </action>
                
    </package>

</struts>
