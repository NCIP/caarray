<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

     <!-- Constants -->
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.custom.i18n.resources" value="ApplicationResources,errors"/>
    <constant name="struts.ui.theme" value="css_xhtml"/>
    <constant name="struts.codebehind.pathPrefix" value="/WEB-INF/pages/"/>    
    
    <!-- Include Struts defaults -->
    <include file="struts-default.xml"/>

    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
    
        <default-interceptor-ref name="paramsPrepareParamsStack" />
        
        <global-results>
            <result name="error">/error.jsp</result>
            <result name="home" type="redirect-action">Project_list</result>
        </global-results>
        
        <global-exception-mappings>
            <exception-mapping result="error" exception="java.lang.Throwable"/>
        </global-exception-mappings>
        
        <action name="Logout" class="gov.nih.nci.caarray.web.action.LogoutAction"> 
            <result name="success">/index.jsp</result> 
        </action>
         
        <action name="Project_list" class="gov.nih.nci.caarray.web.action.ProjectAction" method="list"> 
            <interceptor-ref name="basicStack"/>
            <result name="success">/pages/projectList.jsp</result> 
        </action>
        
        <action name="Project_create" class="gov.nih.nci.caarray.web.action.ProjectAction" method="create"> 
            <result name="success">/pages/newProject.jsp</result> 
        </action>
        
        <action name="Project_save" class="gov.nih.nci.caarray.web.action.ProjectAction" method="save">
            <result name="input">/pages/newProject.jsp</result> 
            <result name="success" type="redirect-action">Project_list</result>
        </action>
        
        <action name="Project_edit" class="gov.nih.nci.caarray.web.action.ProjectAction" method="edit">
            <result name="success">/pages/projectDetails.jsp</result>
        </action>        
        
        <action name="Project_toggle" class="gov.nih.nci.caarray.web.action.ProjectAction" method="toggle">
            <result name="success" type="redirect-action">Project_list</result>
        </action>        
        
        <action name="File_manage" class="gov.nih.nci.caarray.web.action.FileManageAction" method="manage">
            <result name="success">/pages/projectFiles.jsp</result>
        </action>
        
         <action name="File_messages" class="gov.nih.nci.caarray.web.action.FileManageAction" method="messages">
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success">/pages/validationMessages.jsp</result>
        </action>
        
        <action name="File_upload" class="gov.nih.nci.caarray.web.action.FileManageAction" method="upload">
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="redirect-action">
                <param name="actionName">File_manage</param>
                <param name="project.id">${project.id}</param>
            </result>
        </action>
         
        <action name="File_import" class="gov.nih.nci.caarray.web.action.FileManageAction">
            <result name="input">/pages/projectFiles.jsp</result>
            <result name="success" type="redirect-action">
                <param name="actionName">File_manage</param>
                <param name="project.id">${project.id}</param>
            </result>
        </action>
        
    </package>

</struts>
