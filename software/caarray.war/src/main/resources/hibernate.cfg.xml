<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@@SERVERNAME@:1521:@DBNAME@</property>
        <property name="hibernate.connection.username">@DBUSER@</property>
        <property name="hibernate.connection.password">@DBPASSWD@</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle9Dialect</property>

        <!-- mapping files -->
        <mapping resource="gov/nih/nci/caarray/domain/vocabulary/Term.hbm.xml"/>
        <mapping resource="gov/nih/nci/caarray/domain/vocabulary/Category.hbm.xml"/>
        <mapping resource="gov/nih/nci/caarray/domain/vocabulary/Accession.hbm.xml"/>
        <mapping resource="gov/nih/nci/caarray/domain/vocabulary/Source.hbm.xml"/>
        <mapping resource="gov/nih/nci/caarray/domain/protocol/Parameter.hbm.xml"/>
        <mapping resource="gov/nih/nci/caarray/domain/protocol/ParameterValue.hbm.xml"/>
        <mapping resource="gov/nih/nci/caarray/domain/protocol/Protocol.hbm.xml"/>
        <mapping resource="gov/nih/nci/caarray/domain/protocol/ProtocolApplication.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
