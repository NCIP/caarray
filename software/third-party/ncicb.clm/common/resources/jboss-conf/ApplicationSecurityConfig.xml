<security-config>
	<upt-context-name>
		<!-- Context Name for the UPT Application -->
		@application.context.name@
	</upt-context-name>
	<application-list>
	<!-- For every application using the security api an entry should be made here -->
		<application>
			<context-name>
				@application.context.name@
			</context-name>
			<authentication>
				<lockout-time>
					@lockout.time.milliseconds@				
				</lockout-time>
				<allowed-login-time>
					@lockout.time.milliseconds@				
				</allowed-login-time>
				<allowed-attempts>
					@no.of.allowed.attempts@				
				</allowed-attempts>
				<authentication-provider-class>
				<!-- Fully qualified class name-->
				</authentication-provider-class>
			</authentication>
			<authorization>
				<authorization-provider-class>
					<!-- Fully qualified class name-->
				</authorization-provider-class>
				<hibernate-config-file>
					<!-- Fully qualified file path -->
					@hibernate.cfg.file.path@
				</hibernate-config-file>
			</authorization>
		</application>
	</application-list>
</security-config>
