<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.mageom.domain.AuditAndSecurity.impl">
  <class name="SecurityImpl" table="SECURITY" polymorphism="implicit">
    <id name="id" column="ID" type="long">
      <generator class="assigned"/>
    </id>
    <set name="owner" table="SECURITYCONTACT" lazy="true">
      <key column="SECURITY_ID" />
      <many-to-many class="ContactImpl" column="CONTACT_ID" />
    </set>
    <set name="securityGroups" table="SECURITYSECURITYGROUP" lazy="true">
      <key column="SECURITY_ID" />
      <many-to-many class="SecurityGroupImpl" column="SECURITY_GROUP_ID" />
    </set>
    <many-to-one name="security" column="DESC_SECURITY_ID" class="gov.nih.nci.mageom.domain.AuditAndSecurity.impl.SecurityImpl" />
    <set name="propertySets" lazy="true">
      <key column="ID" />
      <one-to-many class="gov.nih.nci.mageom.domain.impl.NameValueTypeImpl" />
    </set>
  </class>
</hibernate-mapping>

