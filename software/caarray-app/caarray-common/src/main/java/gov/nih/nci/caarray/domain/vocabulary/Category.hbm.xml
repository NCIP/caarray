<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.caarray.domain.vocabulary.Category" table="CATEGORY" polymorphism="implicit">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
        <property name="name" column="NAME" type="string" />
        <many-to-one name="parent" column="PARENT_ID" class="gov.nih.nci.caarray.domain.vocabulary.Category" />
        <set name="children" lazy="true">
            <key column="ID" />
            <one-to-many class="gov.nih.nci.caarray.domain.vocabulary.Category" />
        </set>
    </class>
</hibernate-mapping>
