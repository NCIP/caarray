<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.caarray.domain.vocabulary.Term" table="TERM" polymorphism="implicit">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
        <property name="lsidAuthority" column="LSIDAUTHORITY" type="string" />
        <property name="lsidNamespace" column="LSIDNAMESPACE" type="string" />
        <property name="lsidObjectId" column="LSIDOBJECTID" type="string" />
        <property name="description" column="DESCRIPTION" type="string" />
        <property name="value" column="VALUE" type="string" />
        <many-to-one name="category" column="CATEGORY_ID" class="gov.nih.nci.caarray.domain.vocabulary.Category" lazy="false" cascade="save-update" />
        <many-to-one name="accession" column="ACCESSION_ID" class="gov.nih.nci.caarray.domain.vocabulary.Accession" lazy="false" cascade="save-update" />
        <many-to-one name="source" column="SOURCE_ID" class="gov.nih.nci.caarray.domain.vocabulary.Source" lazy="false" cascade="save-update" />
    </class>
</hibernate-mapping>
