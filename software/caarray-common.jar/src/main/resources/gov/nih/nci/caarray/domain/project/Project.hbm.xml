<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.caarray.domain.project.Project" table="PROJECT" polymorphism="implicit">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
        <many-to-one name="investigation" column="INVESTIGATION_ID" class="gov.nih.nci.caarray.domain.project.Investigation" lazy="false" cascade="save-update" />
        <set name="files" lazy="false" cascade="save-update">
            <key column="PROJECT_ID" />
            <one-to-many class="gov.nih.nci.caarray.domain.file.CaArrayFile" />
        </set>
    </class>
</hibernate-mapping>
