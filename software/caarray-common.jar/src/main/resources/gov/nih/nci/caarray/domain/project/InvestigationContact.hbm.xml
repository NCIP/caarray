<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.caarray.domain.project.InvestigationContact" table="INVESTIGATIONCONTACT" polymorphism="implicit">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
        <property name="lsidAuthority" column="LSIDAUTHORITY" type="string" />
        <property name="lsidNamespace" column="LSIDNAMESPACE" type="string" />
        <property name="lsidObjectId" column="LSIDOBJECTID" type="string" />
        <many-to-one name="contact" column="CONTACT_ID" class="gov.nih.nci.caarray.domain.contact.AbstractContact" lazy="false" cascade="save-update" />
        <set name="roles" table="INVESTIGATIONCONTACTROLE" lazy="false" cascade="save-update">
            <key column="INVESTIGATIONCONTACT_ID" />
            <many-to-many class="gov.nih.nci.caarray.domain.vocabulary.Term" column="ROLE_ID" />
        </set>
    </class>
</hibernate-mapping>
