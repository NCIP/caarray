<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.caarray.domain.protocol.Protocol" table="PROTOCOL" polymorphism="implicit">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
        <property name="lsidAuthority" column="LSIDAUTHORITY" type="string" />
        <property name="lsidNamespace" column="LSIDNAMESPACE" type="string" />
        <property name="lsidObjectId" column="LSIDOBJECTID" type="string" />
        <property name="name" column="NAME" type="string" />
        <property name="description" column="DESCRIPTION" type="string" />
        <property name="contact" column="CONTACT" type="string" />
        <property name="hardware" column="HARDWARE" type="string" />
        <property name="software" column="SOFTWARE" type="string" />
        <property name="url" column="URL" type="string" />
        <many-to-one name="type" column="TYPE_ID" class="gov.nih.nci.caarray.domain.vocabulary.Term" lazy="false" cascade="save-update" />
        <set name="parameters" lazy="false" cascade="save-update">
            <key column="PROTOCOL_ID" not-null="true" />
            <one-to-many class="gov.nih.nci.caarray.domain.protocol.Parameter" />
        </set>
    </class>
</hibernate-mapping>
