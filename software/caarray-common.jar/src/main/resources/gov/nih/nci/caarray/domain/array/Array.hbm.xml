<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.caarray.domain.array.Array" table="ARRAY" polymorphism="implicit">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
        <property name="lsidAuthority" column="LSIDAUTHORITY" type="string" />
        <property name="lsidNamespace" column="LSIDNAMESPACE" type="string" />
        <property name="lsidObjectId" column="LSIDOBJECTID" type="string" />
        <property name="batch" column="BATCH" type="string" />
        <property name="serialNumber" column="SERIALNUMBER" type="string" />
        <many-to-one name="production" column="PRODUCTION_ID" class="gov.nih.nci.caarray.domain.protocol.ProtocolApplication" lazy="false" cascade="save-update" />
        <many-to-one name="design" column="DESIGN_ID" class="gov.nih.nci.caarray.domain.array.ArrayDesign" lazy="false" />
    </class>
</hibernate-mapping>
