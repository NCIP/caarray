<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="gov.nih.nci.caarray.domain.array.FeatureGroup" table="FEATUREGROUP" polymorphism="implicit">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
        <many-to-one name="height" column="HEIGHT_ID" class="gov.nih.nci.caarray.domain.measurement.DistanceMeasurement" lazy="false" cascade="save-update" />
        <many-to-one name="length" column="LENGTH_ID" class="gov.nih.nci.caarray.domain.measurement.DistanceMeasurement" lazy="false" cascade="save-update" />
        <many-to-one name="width" column="WIDTH_ID" class="gov.nih.nci.caarray.domain.measurement.DistanceMeasurement" lazy="false" cascade="save-update" />
    </class>
</hibernate-mapping>
